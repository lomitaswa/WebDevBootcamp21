<%- include('../partials/header') %> 
<%- include('../partials/navbar') %> 
    

<div class="container" style="margin-top: 5rem;">

    <h1 class="text-center">Blogs</h1>
    <%- include('../partials/flash')  %>
    <a href="/blogs/new" class="btn btn-primary ">Add New Blog</a>

    <div class="row " style="margin-top: 1rem;">
        <%for(let blog of blogs){  %>
            <div >
                <div class="card shadow p-3 mb-5 bg-body rounded border border-primary">
                    <div class="card-body">
                      <h5 class="card-title"><%= blog.title %> </h5>
                      <h6 class="card-subtitle mb-2 text-muted"><%= blog.author %> </h6>
                      <p class="card-text"><%= blog.content.substring(0, 70) %> </p>
                      <a href="/blogs/<%= blog._id %> " class="btn btn-primary">Read More</a>
                    </div>
                  </div>
            </div>
        <% } %> 
    </div>
</div>



<%- include('../partials/footer') %> 